@section styles{
    <!-- styles -->
    <link href="~/css/movies.css" rel="stylesheet">
    <!--    slick-slider-->
    <link href="https://cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css" rel="stylesheet" type="text/css">
}

@section scripts{
    <!--    slick-slider-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>
    <script src="~/js/slider-for-movies-page.js"></script>
}

@model movie_tracker_website.ViewModels.PagesViews.MoviesViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration Config

@if (Model.Popular?.Count > 0)
{
<div class="slider-full-container ">
    <div class="slider-block container">
        <h6>Популярні цього тижня</h6>
        <hr />
    </div>
    <div class="slider slider-nav container">
        @foreach(var movie in Model.Popular)
        {
            <div class="slide">
                <div class="slider-image-block">
                    <a asp-controller="MoviePage" asp-action="Index" asp-route-id="@movie.Id">
                        <img title="@movie.Title (@movie.ReleaseYear)"
                             src="@Config["Constants:PosterBaseUrl"]@movie.PosterPath">
                    </a>
                </div>
            </div>
        }
    </div>
</div>
}
@if(Model.WatchedByFriends?.Count>0)
{
<div class="movie-list-full container">
    <div class="movie-list">
        <h6>Переглянуте друзями</h6>
        <hr />
        <div class="movie-list-containers">
            <div class="movie-list-component">
                @foreach (var movie in Model.WatchedByFriends)
                {
                    <div class="poster">
                        <a asp-controller="MoviePage" asp-action="Index" asp-route-id="@movie.Id">
                            <img title="@movie.Title (@movie.ReleaseYear)"
                                 src="@Config["Constants:PosterBaseUrl"]@movie.PosterPath">
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
}
<div class="donate-bar container">
    <span>
        <h1>Хочеш підтримати роботу проєкту?</h1>
    </span>
    <div class="btn-component">
        <button class="btn-reg">
            <a href="">
                <h3>Підтримати</h3>
            </a>
        </button>
    </div>
</div>
@if (Model.Recommendations?.Count > 0)
{
<div class="movie-list-full container">
    <div class="movie-list">
        <h6>Рекомендації</h6>
        <hr />
        <div class="movie-list-containers">
            <div class="movie-list-component">
                @foreach (var movie in Model.Recommendations)
                {
                    <div class="poster">
                        <a asp-controller="MoviePage" asp-action="Index" asp-route-id="@movie.Id">
                            <img title="@movie.Title (@movie.ReleaseYear)"
                                 src="@Config["Constants:PosterBaseUrl"]@movie.PosterPath">
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
}